{
    "compilerOptions": {
        "jsx": "react",
        "jsxFactory": "React.createElement",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noEmit": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ESNext"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}